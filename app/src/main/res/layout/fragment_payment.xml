                    android:textSize="17sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/customSwitch_payorder"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:checked="true"
                    android:paddingStart="10dp"
