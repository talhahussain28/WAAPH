                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toTopOf="@+id/cash_view"
                    app:track="@drawable/switch_button_track" />



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
